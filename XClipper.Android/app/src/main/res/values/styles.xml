<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="background">@color/colorBackground</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorTextSecondaryLight">@color/colorTextSecondaryLight</item>
        <item name="colorForeground">@color/colorCard</item>
        <item name="colorSeparator">@color/colorSeparator</item>
        <item name="colorSelected">@color/colorSelected</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?colorTextSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CommonLinearLayoutStyle">
        <item name="paddingStart">10dp</item>
    </style>

    <style name="CustomSwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorCustomBlue</item>
        <item name="colorSwitchThumbNormal">@color/colorTextPrimary</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="SimpleSearchViewStyle">
        <item name="android:hint">@string/search</item>
        <item name="android:textColor">?colorTextPrimary</item>
        <item name="hintColor">?colorTextSecondary</item>
        <item name="searchBackground">?colorForeground</item>
        <item name="iconsTint">?colorTextPrimary</item>
    </style>

    <style name="CustomButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">?colorTextSecondaryLight</item>
        <item name="drawableTint">?colorTextSecondaryLight</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="paddingStart">30dp</item>
        <item name="paddingEnd">30dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="textAllCaps">false</item>
        <item name="iconPadding">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomDialogStyle.Dark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorTextSecondaryLight">@color/colorTextSecondaryLight</item>
        <item name="colorForeground">@color/colorCard</item>
        <item name="colorSeparator">@color/colorSeparator</item>
        <item name="background">@color/colorBackground</item>
        <item name="colorSelected">@color/colorSelected</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="background">@color/colorBackground_Light</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="colorTextPrimary">@color/colorTextPrimary_Light</item>
        <item name="colorTextSecondary">@color/colorTextSecondary_Light</item>
        <item name="colorTextSecondaryLight">@color/colorTextSecondaryLight_Light</item>
        <item name="colorForeground">@color/colorCard_Light</item>
        <item name="colorSeparator">@color/colorSeparator_Light</item>
        <item name="colorSelected">@color/colorSelected_Light</item>
    </style>

    <style name="CustomDialogStyle.Light" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorTextPrimary">@color/colorTextPrimary_Light</item>
        <item name="colorTextSecondary">@color/colorTextSecondary_Light</item>
        <item name="colorTextSecondaryLight">@color/colorTextSecondaryLight_Light</item>
        <item name="colorForeground">@color/colorCard_Light</item>
        <item name="colorSeparator">@color/colorSeparator_Light</item>
        <item name="background">@color/colorBackground_Light</item>
        <item name="colorSelected">@color/colorSelected_Light</item>
        <item name="fontFamily">@font/google_sans_medium</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

</resources>
