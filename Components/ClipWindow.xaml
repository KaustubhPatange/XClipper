<Window x:Class="Components.ClipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Components"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ClipWindow" Height="300" Width="280">
    <Window.Resources>
        <DataTemplate x:Key="myFirstItemTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <!--SizeToContent="Height"-->
        <ListView x:Name="myListView" ItemTemplate="{StaticResource myFirstItemTemplate}" >
        </ListView>
    </Grid>
</Window>
